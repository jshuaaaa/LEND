<link rel="stylesheet" href="app.css">

<header style="margin-left: 20px; margin-top: 20px; display: flex; flex-direction: row;"><a href="/"><i class="fa-solid fa-3x fa-house"></i></a>
<button id="connect">Connect wallet</button>
</header>

<main>
    <h1>LEND</h1>
</main>
<main>
    <h2>Total wETH Liquidity Available:  <span id="weth-locked"></span>  <i class="fa-brands fa-ethereum"></i> </h2>
</main>

<div class="app-container">
    
    

    
    <section>
        <div>
        <h3 style="margin: 10px;"><i class="fa-brands fa-ethereum"></i>  Total wETH deposited into contract: <span id="weth-deposited"></span></h3>
        </div>
        <div>
        <h3 style="margin: 10px;" ><i class="fa-brands fa-ethereum"></i>  wETH collateral value: <span id="user-weth"></span></h3>
        </div>
        <div>
        <h3 style="margin: 10px;">Deposit wETH:<input type="number" id="deposit-input"><button id="deposit">Approve & Deposit</button> </h3>
        </div>
        <div>
        <h3 style="margin: 10px;">Withdraw wETH:<input type="number" id="withdraw-input"><button id="withdraw">Withdraw</button></h3>
        </div>

    </section>
    <section>
        <div>
        <h3 style="margin: 10px;"><i class="fa-brands fa-ethereum"></i>  Total wETH borrowed from contract: <span id="borrow-contract"></span></h3>
        </div>
        <div>
        <h3 style="margin: 10px;"><i class="fa-brands fa-ethereum"></i>  wETH you have borrowed: <span id="user-borrow"></span></h3>
        </div>
        <div>
        <h3 style="margin: 10px;"><i class="fa-brands fa-ethereum"></i>  Remaining wETH you can borrow: <span id="leftto-borrow"></span></h3>
        </div>
        <div>
        <h3 style="margin: 10px;">Borrow wETH:<input id="borrow-input" type="number"><button id="borrow">Borrow</button></h3>
        </div>
        <div>
        <h3 style="margin: 10px;">Repay borrow:<input id="repay-borrow-input" type="number"><button id="repay-borrow">Repay Borrow</button></h3>
        </div>

    </section>
    
</div>